       <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- 1. Lógica do ícone de perfil (MANTIDO) ---
            const accountLink = document.getElementById('account-link');
            const userProfileString = localStorage.getItem('userProfile');
            let user = null;
            
            if (userProfileString) {
                user = JSON.parse(userProfileString);
                accountLink.href = 'perfil.html';
            } else {
                accountLink.href = 'login.html';
            }

            // --- 2. Lógica do botão "Comprar Seguro" (NOVA) ---
            const buyButton = document.getElementById('buy-luthbox-btn');

            if (buyButton) {
                // O botão agora é sempre visível por padrão (via CSS/HTML)
                
                buyButton.addEventListener('click', (event) => {
                    // Previne a navegação imediata
                    event.preventDefault(); 
                    
                    if (user && user.role === 'artista') {
                        // Artista: Redireciona para a página de pagamento
                        window.location.href = 'pagamento.html';
                    } else if (user && user.role === 'visitante') {
                        // Visitante (logado): Exibe alerta
                        alert('A Luthbox é um seguro exclusivo para Artistas e Bandas. Por favor, cadastre-se com o perfil de Artista para prosseguir.');
                    } else {
                        // Não Logado: Exibe alerta
                        alert('Você precisa estar logado como Artista ou Banda para prosseguir com a compra do seguro Luthbox.');
                    }
                });
            }
        });
    </script>
