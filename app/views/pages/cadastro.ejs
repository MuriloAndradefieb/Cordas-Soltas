<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link rel="stylesheet" href="css/perfil.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>
    <main class="login-container">
        <a href="index.ejs" class="primary-button back-button-position" aria-label="Voltar para a página inicial">&#8592; Voltar</a>

        <section class="login-card">
            <h1>Crie sua conta</h1>
            <form id="cadastro-form">
                <label for="username">Nome de Usuário</label>
                <input type="text" id="username" name="username" placeholder="Nome de usuário" required>

                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Seu email" required>

                <label for="password">Senha</label>
                <input type="password" id="password" name="password" placeholder="Sua senha" required>

                <section        </section class="role-selection">
                    <p>Qual é o seu tipo de conta?</p>
                    <input type="radio" id="role-artist" name="role" value="Artista" required>
                    <label for="role-artist" class="radio-label">Artista</label>
                    
                    <input type="radio" id="role-visitor" name="role" value="Visitante" required>
                    <label for="role-visitor" class="radio-label">Visitante</label>
            </section>

                <button type="button" id="cadastrar-btn" class="primary-button">Cadastrar</button>
            </form>
            
            <section        </section class="social-login-section">
                <section        </section class="separator">OU</section        </section>
                
                <section        </section id="g_id_onload"
                    data-client_id="SEU_CLIENT_ID_DO_GOOGLE" 
                    data-context="signup"
                    data-ux_mode="popup"
                    data-callback="handleGoogleSignup"
                    data-auto_prompt="false">
            </section>
                
                <button type="button" id="google-custom-button" class="social-button google-button" aria-label="Cadastrar com o Google">
                    <i class="fab fa-google"></i> Cadastrar com Google
                </button>

                <button type="button" class="social-button facebook-button" aria-label="Cadastrar com o Facebook">
                    <i class="fab fa-facebook-f"></i> Cadastrar com Facebook
                </button>
        </section>

            <p>Já tem uma conta? <a href="login.ejs">Faça login</a></p>
        </section>
    </main>

    <script>
        // FUNÇÃO DE CALLBACK DO GOOGLE (Para login/cadastro via Google)
        function handleGoogleSignup(response) {
            const roleInput = document.querySelector('input[name="role"]:checked');
            if (!roleInput) {
                alert('Por favor, selecione seu tipo de conta antes de usar o Google Sign-In.');
                return;
            }
            
            try {
                const base64Url = response.credential.split('.')[1];
                const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
                const userPayload = JSON.parse(atob(base64));

                const username = userPayload.name || userPayload.email.split('@')[0];
                const email = userPayload.email;
                
                // Salva o perfil no localStorage com o cargo selecionado
                localStorage.setItem('userProfile', JSON.stringify({
                    username: username, 
                    email: email,
                    role: roleInput.value 
                    // Nota: A senha não é salva para logins sociais, pois a autenticação é gerenciada pelo Google.
                }));

                alert(`Cadastro e Login com ${email} bem-sucedido via Google! Redirecionando para o perfil.`);
                window.location.href = 'perfil.html';
                
            } catch (error) {
                console.error("Erro ao decodificar o token do Google:", error);
                alert("Ocorreu um erro ao processar seu cadastro do Google.");
            }
        }


        // LÓGICA DE CADASTRO COM FORMULÁRIO (Corrigida para clareza)
        document.getElementById('cadastrar-btn').addEventListener('click', function() {
            const usernameInput = document.getElementById('username').value;
            const emailInput = document.getElementById('email').value;
            const passwordInput = document.getElementById('password').value;
            const roleInput = document.querySelector('input[name="role"]:checked');
            
            if (usernameInput && emailInput && passwordInput && roleInput) {
                // Salva o perfil no localStorage, incluindo a senha para ser verificada no login.html
                localStorage.setItem('userProfile', JSON.stringify({
                    username: usernameInput,
                    email: emailInput,
                    password: passwordInput, // Salva a senha aqui
                    role: roleInput.value
                }));

                alert('Cadastro realizado com sucesso! Agora faça o login.');
                window.location.href = 'login.html';
            } else {
                alert('Por favor, preencha todos os campos e selecione seu tipo de conta.');
            }
        });

        // Conecta o clique do nosso botão estilizado ao fluxo do Google
        document.getElementById('google-custom-button').addEventListener('click', function() {
            const roleInput = document.querySelector('input[name="role"]:checked');
            if (!roleInput) {
                alert('Por favor, selecione seu tipo de conta (Artista ou Visitante) antes de usar o Google Sign-In.');
                return;
            }
            
            if (typeof google !== 'undefined' && google.accounts && google.accounts.id) {
                google.accounts.id.prompt(); 
            } else {
                 alert('O Google Sign-In ainda não foi carregado. Tente recarregar a página.');
            }
        });

        document.querySelector('.facebook-button').addEventListener('click', () => {
            alert('O login com Facebook exigiria a integração do Facebook SDK.');
        });
    </script>
</body>
</html>