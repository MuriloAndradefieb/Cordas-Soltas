<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="css/perfil.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>
    <main class="login-container">
        <a href="/" class="primary-button back-button-position" aria-label="Voltar para a página inicial">&#8592; Voltar</a>
        
        <section class="login-card">
            <h1>Login</h1>
            <form id="login-form">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Seu email" required>

                <label for="password">Senha</label>
                <input type="password" id="password" name="password" placeholder="Sua senha" required>
                
                <button type="button" id="entrar-btn" class="primary-button">Entrar</button>
            </form>
            
            <p>Não tem uma conta? <a href="/cadastro">Cadastre-se</a></p>
        </section>
    </main>

    <script>
        function handleGoogleLogin(response) {
            try {
                const base64Url = response.credential.split('.')[1];
                const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
                const userPayload = JSON.parse(atob(base64));

                const username = userPayload.name || userPayload.email.split('@')[0];
                const email = userPayload.email;
                
                localStorage.setItem('userProfile', JSON.stringify({
                    username: username, 
                    email: email,
                    role: 'Visitante'
                }));

                alert(`Login com ${email} bem-sucedido via Google! Redirecionando para o perfil.`);
                window.location.href = '/perfil';
                
            } catch (error) {
                console.error("Erro ao decodificar o token do Google:", error);
                alert("Ocorreu um erro ao processar seu login do Google.");
            }
        }

        document.getElementById('entrar-btn').addEventListener('click', function() {
            const emailInput = document.getElementById('email').value;
            const passwordInput = document.getElementById('password').value;
            
            const savedProfileString = localStorage.getItem('userProfile');
            
            if (!savedProfileString) {
                alert('Nenhum perfil encontrado. Por favor, cadastre-se primeiro.');
                return;
            }

            const savedProfile = JSON.parse(savedProfileString);
            if (savedProfile.email === emailInput && savedProfile.password === passwordInput) {
                alert('Login com formulário bem-sucedido! Redirecionando para o perfil.');
                window.location.href = '/perfil';
            } else {
                alert('Credenciais inválidas. Verifique seu email e senha.');
            }
        });

     
    </script>
</body>
</html>